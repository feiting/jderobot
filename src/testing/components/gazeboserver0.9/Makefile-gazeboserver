JDEROBOTDIR = /usr/local
CXXFLAGS = -I/usr/local/include/gazebo -I../../interfaces/cpp/ -I$(JDEROBOTDIR)/include/jderobot -I$(JDEROBOTDIR)/include/jderobot/progeo -I/usr/include/gearbox `pkg-config --cflags opencv` `pkg-config --cflags gtkmm-2.4 libglademm-2.4 gthread-2.0` `pkg-config --cflags gtkglextmm-1.2`
LDFLAGS = `pkg-config --libs gtkmm-2.4 libglademm-2.4 gthread-2.0` `pkg-config --libs opencv` -lgsl -lgslcblas `pkg-config --libs gtkglextmm-1.2` -lGL -lGLU -lglut -lgazebo
LDADD = $(JDEROBOTDIR)/lib/jderobot/libJderobotIce.la \
	$(JDEROBOTDIR)/lib/jderobot/libJderobotUtil.la \
	$(JDEROBOTDIR)/lib/jderobot/libcolorspacesmm.la \
	$(JDEROBOTDIR)/lib/jderobot/libJderobotInterfaces.la \
	$(JDEROBOTDIR)/lib/jderobot/libprogeo.la \
	$(JDEROBOTDIR)/lib/jderobot/libpioneer.la


gazeboserver: gazeboserver.o ../../interfaces/cpp/jderobot/pose3dmotors.o ../../interfaces/cpp/jderobot/pose3dencoders.o
	libtool --mode=link g++ -g -O -o gazeboserver gazeboserver.o ../../interfaces/cpp/jderobot/pose3dencoders.o ../../interfaces/cpp/jderobot/pose3dmotors.o $(LDADD) $(LDFLAGS)

clean:
	rm -f *.o gazeboserver







